correct_Käyttäjätunnus = "python"
correct_salasana = "rules"

Käyttäjätunnus = input("Kirjoita käyttäjätunnuksesi!")
salasana = input("Kirjoita salasanasi!")
yritykset = 1
while correct_Käyttäjätunnus != Käyttäjätunnus and correct_salasana != salasana and yritykset < 5:
    print("Väärä käyttäjätunnus tai salasana!")
    yritykset += 1
    print("sinulla on", 6 - yritykset, "yritystä järjellä!")
    käyttäjätunnus = input("Kirjoita käyttäjätunnuksesi!")
    sanasana = input("Kirjoita salasanasi!")
    if correct_Käyttäjätunnus == käyttäjätunnus and correct_salasana == salasana:
        break
if correct_Käyttäjätunnus == käyttäjätunnus and correct_salasana == salasana:
    print("\n - TerveTuloa, käyttäjä. -")
elif correct_Käyttäjätunnus != käyttäjätunnus and correct_salasana != salasana:
    print("\n - Pääsy on evätty. -")